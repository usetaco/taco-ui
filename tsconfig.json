{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "declaration": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react",
    "typeRoots": ["index.d.ts", "node_modules/@types"]
  },
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts",
    "index.ts",
    "/.src/components/styles/fonts.css",
    "/.src/util/*.js"
  ],
  "exclude": ["node_modules"]
}
